@model ExamStudent.ViewModels.MediumViewModels

@{
    ViewBag.Title = "Medium";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Medium</h2>


<div class="container">

    <h2>@ViewBag.errormsg </h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Medium</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
           @Html.DropDownListFor(m => m.BoardTypeID, new SelectList(Model.BoardTypeList, "BoardTypeId", "BoardTypeName"),
                                                   new { @class = "form-control" })

        </div>

       

        <div class="form-group">
            @Html.LabelFor(model => model.MediumName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MediumName, new { htmlAttributes = new { @class = "form-control col-md-5" } })
                @Html.ValidationMessageFor(model => model.MediumName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
    }


</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
