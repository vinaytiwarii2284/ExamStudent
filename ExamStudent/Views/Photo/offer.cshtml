
@{
    ViewBag.Title = "offer";
    Layout = "~/Views/Shared/_LayoutUserPanel.cshtml";
}


@Scripts.Render("~/bundles/bootstrap")

   

    <div id="pricing" class="container-fluid">
        <div class="text-center">
            <h2>Pricing</h2>
            <h4>Choose a payment plan that works for you</h4>
        </div>
        <div class="row slideanim">
            <div class="col-sm-4 col-xs-12">
                <div class="panel panel-default text-center">
                    <div class="panel-heading">
                        <h1>Basic</h1>
                    </div>
                    <div class="panel-body">
                        <h3> One year calling and data recharge free on referral to first four students.</h3>
                    </div>
                    <div class="panel-footer">
                        @*<h3>$19</h3>
                        <h4>per month</h4>*@
                        @*<button class="btn btn-lg">Sign Up</button>*@
                    </div>
                </div>
            </div>
            <div class="col-sm-4 col-xs-12">
                <div class="panel panel-default text-center">
                    <div class="panel-heading">
                        <h1>Pro</h1>
                    </div>
                    <div class="panel-body">
                        <h3> After that Rs 300 will be given on each referral.</h3>
                    </div>
                    <div class="panel-footer">
                        @*<h3>$29</h3>
                        <h4>per month</h4>
                        <button class="btn btn-lg">Sign Up</button>*@
                    </div>
                </div>
            </div>
            <div class="col-sm-4 col-xs-12">
                <div class="panel panel-default text-center">
                    <div class="panel-heading">
                        <h1>Premium</h1>
                    </div>
                    <div class="panel-body">
                        <h3> It is compulsory for all students to have at least Rs 1000 to transfer money to their account.</h3>
                    </div>
                    <div class="panel-footer">
                        @*<h3>$49</h3>
                        <h4>per month</h4>
                        <button class="btn btn-lg">Sign Up</button>*@
                    </div>
                </div>
            </div>
        </div>
    </div>