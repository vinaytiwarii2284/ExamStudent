
@{
    ViewBag.Title = "Amount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center text-danger">User Amount</h2>
<br /><br />

<div class="row">

    <div class="col-md-6">

        <div class="col-25">
            <div class="container-fluid">
                <h2 style="color:#4800ff">ALPHABET.com</h2>
                <hr />
                <h4>Cart <span class="price" style="color:black"><i class="fa fa-shopping-cart"></i> <b></b></span></h4>
                <hr />
                <h4>Order Summary</h4>
                <hr />

                <p><a href="#" style="color:#b200ff"><b>Form Fee</b></a> <span class="price"><i class="fa fa-rupee"></i>1410 </span></p>
                <p><a href="#" style="color:#b200ff"><b>Tax</b></a> <span class="price"><i class="fa fa-rupee"></i> 90</span></p>
                <p><a href="#" style="color:#b200ff"><b>Sub Total</b></a> <span class="price"><i class="fa fa-rupee"></i> 1500</span></p>
                @*<p><a href="#">Product 4</a> <span class="price">$2</span></p>*@
                <hr>
                <p><b>Total</b> <span class="price" style="color:black"><i class="fa fa-rupee"></i> <b>1500</b></span></p>
            </div>
        </div>

        <br />


        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" id="btn">

            Pay Now : <i class="fa fa-rupee"></i> 1500
        </button>

        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Order Summary</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">

                        <p><a href="#">Form Fee</a> <span class="price"><i class="fa fa-rupee"></i>1410</span></p>
                        <p><a href="#">GST</a> <span class="price"><i class="fa fa-rupee"></i>90</span></p>
                        <p><a href="#">Sub Total</a> <span class="price"><i class="fa fa-rupee"></i>1500</span></p>
                        @*<p><a href="#">Product 4</a> <span class="price">2</span></p>*@
                        <hr>
                        <p><b>Total</b> <span class="price" style="color:black"><i class="fa fa-rupee"></i><b>1500</b></span></p>
                    </div>
                    <div class="modal-footer">

                        <div class='pm-button'>
                            <a href='https://www.payumoney.com/paybypayumoney/#/56B325265DE7B336683F7D0828AE5D76'>
                                <img src='https://www.payumoney.com/media/images/payby_payumoney/new_buttons/22.png' />
                            </a>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3" id="img">

        <img src="~/Content/imgvinay/pay-online.jpg" />

    </div>

</div>

