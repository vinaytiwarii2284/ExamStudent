        console.log(data);
        GetSumAmount(data.id); 

    }).on('select2:unselect', function (e) {
        var data = e.params.data;
        console.log(data);
        GetSubAmount(data.id);

    });

   
    function GetSumAmount(id) {
       
        $.ajax({
            type: "GET",
            url: "/UserAccount/GetAmount/?UserSubjectId=" + parseInt(id), 
            success: function (data) { 
                amount = Number(Number(amount) + Number(data));
                //console.log('data.amount', data.amount);
                $('#amount').val(amount);

            }
        });
    }

    function GetSubAmount(id) {

        $.ajax({
            type: "GET",
            url: "/UserAccount/GetAmount/?UserSubjectId=" + parseInt(id),
            success: function (data) {
                amount = Number(Number(amount) - Number(data));
                //console.log('data.amount', data.amount);
                $('#amount').val(amount);

            }
        });
    }

    

</script>

