

@model IEnumerable<ExamStudent.Models.Tab_User_Info_Temp>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>

<div class="container">
    <form method="get">
        <lable>Search :</lable> : @Html.RadioButton("searchBy", "Name", true) <label>Name</label>
        || <lable>Search :</lable>@Html.RadioButton("searchBy", "") <label>Email Address</label>
        @Html.TextBox("search")<button>Search</button>
    </form>

</div>


<div style="overflow-x:auto;">
    <table class="table table-striped table-bordered table-responsive table-sm" cellspacing="0" width="100%">
        <tr>

            <th>
                Name
                
            </th>
            <th>
                EmailAddress
                
            </th>
            <th>DATE</th>

            <th>
                Password
                
            </th>


            <th>
                Confirm Password
               
            </th>
           
            <th>
                usercode
                
            </th>

            <th>
                EmpID
                
            </th>


            <th>
                BoardType
                
            </th>
            <th>
                City
                
            </th>
            <th>
                Medium
                
            </th>
            <th>
                Standard
                
            </th>
            <th>
                State
                
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.ConfirmPassword)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.usercode)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.EmpID)
                </td>



                <td>
                    @Html.DisplayFor(modelItem => item.BoardType.BoardTypeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City.CityName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Medium.MediumName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Standard.StandardName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State.StateName)
                </td>
                <td>
                    @Html.ActionLink("Approval", "Edit", new { id = item.Id }, new { @class = "btn btn-success" }) 
                        @*@Html.ActionLink("Details", "Details", new { id=item.Id }) 
                        @Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
                </td>
            </tr>
        }

    </table>



</div>