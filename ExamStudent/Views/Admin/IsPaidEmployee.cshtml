<div class="">
    <div class=" table-responsive">

        <table id="datatable" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
            <thead>
                <tr class="warning">
                    <th>
                        Name
                    </th>
                    <th>
                        Email Address
                    </th>
                    <th>
                        Emp State
                    </th>
                    <th>
                        City Name
                    </th>
                    <th>Is Paid</th>
                    <th>Amount</th>
                    <th>
                        Post Name
                    </th>
                    <th>
                        Mobile Number
                    </th>
                    <th>
                        Date
                    </th>

                    <th>
                        Password
                    </th>
                    <th>
                        Referl Code
                    </th>
                    <th>
                        Referl Name
                    </th>

                    <th>
                        Referal Name
                    </th>
                    <th>Action</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Employee_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Emp_EmailAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmpState.Emp_State)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Emp_City.Emp_CityName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsPaid)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PostForm.PostName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Emp_MobileNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Emp_Password)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.usercode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReferlName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.ReferalForm.ReferalName)
                    </td>
                    <td>

                        @Html.ActionLink("Edit", "Edit", "EmployeeAp", new { id = item.Employee_ID }, new { @class = "btn btn-primary" }) |
                        @Html.ActionLink("Delete", "Delete", "EmployeeAp", new { id = item.Employee_ID }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

