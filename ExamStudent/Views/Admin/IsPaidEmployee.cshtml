@model IEnumerable<ExamStudent.Models.Employee_Form_Temp>
@{
    ViewBag.Title = "IsPaidEmployee";
    Layout = "~/Views/Shared/_LayoutAdmin2.cshtml";
}

<h2 class="main-title-w3layouts mb-2 text-center">Is Paid Employee</h2>

