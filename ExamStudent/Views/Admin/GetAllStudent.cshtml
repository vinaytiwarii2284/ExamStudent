        var status = element.checked;
        $.ajax({
            type: "Get",
            url: '../../Admin/UserStatuStudent?checkid=' + id + '&&status=' + status + '',
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function () {
            }
        });
    }
</script>
