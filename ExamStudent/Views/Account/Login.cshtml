
@{
    ViewBag.Title = "Login";
}

<h2 class="text-info">Login Page</h2>

<div class="container">

    <form method="post">

        <div class="form-group">
            <label>Name</label>
            <input id="loginName" type="text" name="LoginName" class="form-control"required />
        </div>


        <div class="form-group">
            <label>Password</label>
            <input id="loginpassword" type="text" name="LoginPassword" class="form-control"required />
        </div>

      
        <button class="btn btn bg-primary">Sign In</button> ||

        <button type="reset" class="btn btn-danger">Reset</button>
    </form>

  

</div>

