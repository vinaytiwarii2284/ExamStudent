                    </tr>
                </tbody>
            </table>
        </div>*@
            <div class="row">
                <div class="col-lg-4 col-sm-5">

                </div>

                <div class="col-lg-4 col-sm-5 ml-auto">
                    <table class="table table-clear">
                        <tbody>
                            <tr>
                                <td class="left">
                                    <strong>Fee Amount</strong>
                                </td>
                                <td class="right"><span>&#8377;</span>@Model.Amount</td>
                            </tr>
                            <tr>
                                <td class="left">
                                    <strong>GST (18%)</strong>
                                </td>
                                <td class="right"><span>&#8377;</span>@Model.gst</td>
                            </tr>
                            <tr>
                                <td class="left">
                                    <strong>Transaction Charge (3%)</strong>
                                </td>
                                <td class="right"><span>&#8377;</span>@Model.tramt</td>
                            </tr>
                            <tr>
                                <td class="left">
                                    <strong>Total</strong>
                                </td>
                                <td class="right">
                                    <strong><span>&#8377;</span>@Model.Total</strong>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                </div>

            </div>

            <div class="d-print-none">
                <div class="float-right">
                    @*<a href="javascript:window.print()"  class="btn btn-success">Print</a>*@
                    <a href="../../UserAccount/Pay/@Model.APPID" class="btn btn-primary ml-2 btn-lg">Pay Now</a>
                </div>
            </div>

        </div>
    </div>
</div>

<br />
<br />
<br />
<br />
<br />

<script>
    $(document).ready(function () {
        focusAction()
    });

    function focusAction() {
        $('html , body').animate({
            scrollTop: $("#registerdata").offset().top - 200
        }, 1000)
    }

</script>



