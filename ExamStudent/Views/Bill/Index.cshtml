@model ExamStudent.ViewModels.BillViewmodel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<br />
<br />

<div class="container" id="registerdata">
    <h2 class="text-dark text-center"> @Model.UserName Payment Bill</h2><br /> 
    <hr />
    <div class="card">
        <div class="card-header">
            Invoice
            <strong>@DateTime.Now</strong>
            <span class="float-right"> <strong>Status:</strong> Pending</span>
        </div>
        <div class="card-body">
            <h1 class="d-print-none">
                <a class="navbar-brand" href="@Url.Action("Index" , "Home")">
                    E<span>d</span><span>u</span>Al<span>p</span>h<span>a</span>b<span>e</span>t<span>.com</span>
                </a>
            </h1>
            <br />
            <div class="row mb-4">
                <div class="col-sm-6">

                    <div>
                        <strong>Dear</strong>
                    </div>
                    <br />
                    <div><strong>User Name :</strong> @Model.CustomerName</div>
                    <div><strong>Email :</strong>  @Model.email</div>
                    <div><strong>Phone :</strong>  @Model.Mobile</div>
                </div>
            </div>

